  template:
    spec:
      restartPolicy: Never
      containers:
        - name: notes
          image: {{ KEYTERMS_DOCKER_IMAGE }}
          env:
            - name: DJANGO_SETTINGS_MODULE
              value: edx_key_terms_api.settings.tutor
      volumes:
        - name: settings
          configMap:
            name: keyterms-settings
