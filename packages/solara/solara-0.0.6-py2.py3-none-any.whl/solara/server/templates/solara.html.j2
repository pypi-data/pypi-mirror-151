    <script>
        var themeIsdark = {{ dark|tojson|safe }}
        const themeIsdarkInStorage = JSON.parse(localStorage.getItem('vuetify.theme.dark'));
        if(themeIsdarkInStorage !== null)
            themeIsdark = themeIsdarkInStorage;
        if(themeIsdark == null) {
            if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
               themeIsdark = true;
            }
        }
        if ('{{resources.theme}}' === 'dark') {
            themeIsdark = true;
        }
        if (window.location.search) {
            if (window.location.search.includes('theme=dark')) {
                themeIsdark = true;
            } else if (window.location.search.includes('theme=light')) {
                themeIsdark = false;
            }
        }
    </script>
