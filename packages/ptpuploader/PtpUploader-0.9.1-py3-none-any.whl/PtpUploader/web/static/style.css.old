a, a:visited
{
    color: #859292;
    text-decoration: none;
}

body.uploader
{
    margin: 0 auto;
    width: 940px;

    font-family: Arial,sans-serif;
}

.dark-select2, .select2-container
{
    color: #000000;
}

html.busy, html.busy *
{
    cursor: wait !important;
}

/* Tell the browser to render HTML 5 elements as block */
header, section, nav
{
    display: block;
}

nav
{
    background-color: #000C0E;
}

nav ul
{
    margin: 0 0 10px 0;
    padding: 0;
}

nav ul li
{
    display: inline;
}

nav ul li a,
nav ul li a:visited
{
    color: #565656;
    font-size: 1.25em;
    font-weight: bold;
    margin: 5px 2px;
    padding: 7px 10px 4px;
    text-transform: uppercase;
}

nav ul li a:hover
{
    background-color:#f0f0f0;
}

table.jobs
{
    border-spacing: 0;
    width: 100%;
}

table.jobs th, #jobs_filter, #jobs_length
{
    background-color: #0F2127;
    border-bottom: 5px solid #0F2127;
}

table#jobs tr:nth-child(odd)
{
    background-color: #020C0E;
}

table#jobs tr:nth-child(even)
{
    background-color: #071115;
}

table#jobs tr:hover, table#jobs tr:hover:nth-child(odd)
{
    background-color: #202020;
}

table#jobs th.state
{
    padding-left: 1px;
}

table#jobs td.name
{
    width: 100%;
}

table#jobs td.nowrap
{
    white-space: nowrap;
}

table#jobs td.jobbuttons
{
    text-align: right;
}

table
{
    border-collapse: collapse;
}

#editjob_table td.label
{
    text-align: right;
}

#editjob_table td, th
{
    border: thin solid #121C1E;
    padding: 0 2px 0 2px;
    text-align: left;
}
